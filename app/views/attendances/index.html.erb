<h1 class="text-center" style="margin: 10px"> Ils participeront avec toi à ton event:  </h1>

<% @attendances.each do |attendance| %>
<div class="container text-center">
  <div class="row">
    <div class="col-lg" style="max-width: auto;"> 
      <div class="card border-warning m-4" style="height: 10rem">
        <div class="card-header"><%= attendance.participant.first_name %> <%= attendance.participant.last_name %></div>
          <div class="card-body">
            <h6 class="card-title">Voici l'email de contact de <%= attendance.participant.first_name %> : <%= attendance.participant.email %></h6>
            <p class="card-text">Tu peux lire ici la description de ton invité : <%= attendance.participant.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="text-center">
  <%= link_to "Modifier mon event", edit_event_path(@event), class: 'btn btn-outline-danger btn-sm'%>
</div>