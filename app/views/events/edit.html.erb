<div class=" col-md-12  row">
  <p class="col-lg-1" style="margin: 15px 0; "><%= link_to "Supprimer cet event", event_path(@event), method: :delete, data: {confirm: "Voulez-vous vraiment supprimer cet event ?"} , class: "btn btn-outline-danger btn-sm" %></p>
  <h1 class="col-lg-11 text-center" style="margin: 15px 0"> Editez votre event </h1>
</div>
<div class ='align-middle text-center'>
	<div class="card m-5 p-5" style="height:auto">
		<div class="card-body">
      <div class="row">
        <div class="col-md-8 offset-md-2">

          <%= form_with model: @event, local: true do |form| %>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :title, 'Titre' %> </div>
            <div class="col-lg-9">
              <%= form.text_field :title, class: "form-control"  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :location, 'Localisation' %> </div>
            <div class="col-lg-9">
              <%= form.text_field :location, class: "form-control"  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :start_date, 'Date' %> </div>
            <div class="col-lg-9">
              <%= form.datetime_select   :start_date, class: "form-control"  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :duration, 'DurÃ©e' %> </div>
            <div class="col-lg-9">
              <%= form.number_field :duration, {value: '15', min: 5, step: 5  } %>  (multiple de 5)
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :price, 'Prix' %> </div>
            <div class="col-lg-9">
              <%= form.number_field :price, {value: '199', min: 1, max: 1000  } %>  (en euros)
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :description, 'Description' %> </div>
            <div class="col-lg-9">
              <%= form.text_area :description, class: "form-control"  %>
            </div>
          </div>

          <div class="actions mt-5 row">
            <div class="col-lg-3"></div>
            <%= form.submit "Valider", class: "btn btn-outline-success btn-block col-lg-9", style: "margin: 10px 0;" %>
          </div>

            <% end %>
          </form>

          <div class="actions mt-5 row">
            <div class="col-lg-3"></div>
            <%= link_to "Ajouter une image", new_event_events_picture_path(@event), :class => "btn btn btn-block btn-outline-warning col-lg-9" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>